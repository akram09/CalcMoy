<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/module_recycler"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline22"
                app:layout_constraintStart_toStartOf="@+id/guideline21"
                app:layout_constraintTop_toTopOf="parent"/>

        <android.support.constraint.Guideline
                android:id="@+id/guideline21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.06"/>
        <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/guideline46"
                app:layout_constraintGuide_percent="0.03"
        />
        <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/guideline47"
                app:layout_constraintGuide_percent="0.16"
                android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:id="@+id/main_modules_semestres_recycler"
                app:layout_constraintBottom_toTopOf="@id/guideline47"
                app:layout_constraintTop_toBottomOf="@id/guideline46"
                app:layout_constraintLeft_toRightOf="@id/guideline21"
                app:layout_constraintRight_toLeftOf="@id/guideline22"
                android:layout_height="0dp"></android.support.v7.widget.RecyclerView>

        <android.support.constraint.Guideline
                android:id="@+id/guideline22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.94"/>
        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/main_modules_progress"
              app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
               />
    </android.support.constraint.ConstraintLayout>



</layout>