<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/white"
        android:layout_height="56dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
    >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
        android:text="@string/module_name"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
                  android:id="@+id/main_profile_semestre_matters"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
        android:textSize="25sp"/>
        <android.support.constraint.Barrier
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:id="@+id/barrier"
                app:barrierDirection="end"
                app:constraint_referenced_ids="main_profile_semestre_matters"
                android:layout_height="wrap_content"/>
        <View android:layout_width="1dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              android:background="#949494"
              app:layout_constraintRight_toLeftOf="@id/barrier"
              android:layout_height="0dp" android:id="@+id/view"></View>
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/view"
                  android:id="@+id/main_profile_semestre_matter_moy"
        app:layout_constraintBottom_toBottomOf="parent"
                  android:text="12.5"
                  android:textStyle="bold"
                  android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>


</android.support.design.card.MaterialCardView>