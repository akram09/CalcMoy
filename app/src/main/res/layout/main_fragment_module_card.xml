<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
         xmlns:tools="http://schemas.android.com/tools"
         xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.v7.widget.CardView
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
  android:layout_marginLeft="3dp"
   android:layout_marginBottom="8dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="9dp"
    app:cardElevation="9dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:textColor="#000"
                android:textDirection="rtl"
                android:textSize="18sp"
                 />

        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              app:layout_constraintTop_toBottomOf="@id/textView4"
                android:background="#888883"
              android:layout_marginTop="12dp"
              android:id="@+id/seperator1"
              android:layout_marginLeft="20dp"
        ></View>
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toBottomOf="@id/seperator1"
                android:paddingRight="18dp"
                android:textColor="#000"
                android:layout_marginBottom="6dp"
                android:textDirection="rtl"
                android:textSize="18sp"
                 />

        <View android:layout_width="match_parent"
              android:layout_height="2dp"
              app:layout_constraintTop_toBottomOf="@id/textView5"
              android:background="#888883"
              android:id="@+id/seperator2"
              android:layout_marginTop="12dp"
              android:layout_marginLeft="20dp"
        ></View>

                <TextView

                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/seperator2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:text="@string/events_soon"
                    android:textColor="#000"
                    android:textDirection="rtl"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"
                android:lines="2"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_more_vert_black_24dp"
                android:textSize="20sp"
                 />

            <LinearLayout android:orientation="horizontal"
                          android:background="#A300C7F5"
                          android:layout_height="47dp"
                          app:layout_constraintTop_toBottomOf="@id/textView3"
                          android:layout_width="match_parent">
                <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="Check"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="#00ffffff"
                        android:textColor="#fff"
                        android:id="@+id/check"/>
                <View android:layout_width="2dp"
                      android:layout_height="match_parent"
                      android:background="#62ffffff"
                      android:layout_marginTop="5dp"
                      android:layout_marginBottom="5dp"/>
                <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="update "
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="#00ffffff"
                        android:textColor="#fff"
                        android:id="@+id/start"/>

            </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
</layout>